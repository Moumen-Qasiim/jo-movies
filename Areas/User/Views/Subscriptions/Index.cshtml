@model List<Subscription>
<style>
    .pricing1 {
        background-color: #f5f5f5;
        padding-top: 5rem;
        padding-bottom: 5rem;
    }

        .pricing1 .container-fluid {
            margin-left: 0;
            margin-right: 0;
        }

        .pricing1 .item {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 0.25rem;
            padding: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .pricing1 .item-head {
            margin-bottom: 1rem;
        }

        .pricing1 .item-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .pricing1 .item-subtitle {
            font-size: 1rem;
            color: #6c757d;
        }

        .pricing1 .item-content {
            margin-bottom: 2rem;
        }

        .pricing1 .item-footer {
            margin-top: 0;
        }

        .pricing1 .btn {
            background-color: #337ab7;
            color: #fff;
            border-color: #337ab7;
            padding: 0.5rem 1rem;
            font-size: 1rem;
            border-radius: 0.25rem;
        }

            .pricing1 .btn:hover {
                background-color: #23527c;
                border-color: #23527c;
            }
</style>

<section data-bs-version="5.1" class="pricing1 cid-ufZ6qJ0O31" id="pricing-cards-1-ufZ6qJ0O31">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 content-head">
                <div class="mbr-section-head mb-5">
                    <h4 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                        <strong>Subscription To our Family</strong>
                    </h4>

                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="item features-without-image col-12 col-md-6 col-lg-4 item-mb ">
                    <div class="item-wrapper">
                        <div class="item-head">
                            <h5 class="item-title mbr-fonts-style mb-0 display-5">
                                <strong>@plan.Name</strong>
                            </h5>
                            <h6 class="item-subtitle mbr-fonts-style mt-0 mb-0 display-7">
                                <strong>@plan.price</strong>/month
                            </h6>
                        </div>
                        <div class="item-content">
                            <p class="mbr-text mbr-fonts-style display-7">@plan.Description</p>
                        </div>
                        <div class="mbr-section-btn item-footer">
                            <a href="@plan.Description" class="btn item-btn btn-primary display-7">Get Started</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>